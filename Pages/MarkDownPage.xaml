<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App2.Pages.MarkDownPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App2.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部导航栏 (保持不变) -->
        <Pivot x:Name="TopPivot"
               Grid.Row="0"
               Title="TipTap Editor"
               SelectionChanged="TopPivot_SelectionChanged"
               Background="{ThemeResource LayerFillColorDefaultBrush}">
            <PivotItem Header="文件" Tag="file">
                <Grid/>
            </PivotItem>
            <PivotItem Header="格式" Tag="format">
                <Grid/>
            </PivotItem>
            <PivotItem Header="插入" Tag="insert">
                <Grid/>
            </PivotItem>
            <PivotItem Header="视图" Tag="view">
                <Grid/>
            </PivotItem>
            <PivotItem Header="导出" Tag="export">
                <Grid/>
            </PivotItem>
        </Pivot>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1">

            <!-- 亚克力悬浮工具栏容器 -->
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="16,12"
                    Margin="0,0,0,0"
                    Canvas.ZIndex="200">
                <Border.Background>
                    <media:BackdropBlurBrush Amount="5.0" />
                </Border.Background>


                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 第一行工具 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="4" Margin="0,0,0,8">

                        <!-- 基础格式 -->
                        <ToggleButton Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                      ToolTipService.ToolTip="粗体" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8DD;" FontSize="16"/>
                        </ToggleButton>
                        <ToggleButton Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                      ToolTipService.ToolTip="斜体" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8DB;" FontSize="16"/>
                        </ToggleButton>
                        <ToggleButton Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                      ToolTipService.ToolTip="下划线" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8DC;" FontSize="16"/>
                        </ToggleButton>
                        <ToggleButton Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                      ToolTipService.ToolTip="删除线" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xEDE0;" FontSize="16"/>
                        </ToggleButton>
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="代码" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE943;" FontSize="16"/>
                        </Button>

                        <Rectangle Width="1" Height="24" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="4,0"/>

                        <!-- 段落和标题 -->
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="段落" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8FD;" FontSize="16"/>
                        </Button>
                        <ComboBox Width="80" Height="32" PlaceholderText="H"
                                  ToolTipService.ToolTip="标题级别">
                            <ComboBoxItem Content="H1"/>
                            <ComboBoxItem Content="H2"/>
                            <ComboBoxItem Content="H3"/>
                            <ComboBoxItem Content="H4"/>
                            <ComboBoxItem Content="H5"/>
                            <ComboBoxItem Content="H6"/>
                        </ComboBox>

                        <Rectangle Width="1" Height="24" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="4,0"/>

                        <!-- 对齐方式 -->
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="左对齐" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8E4;" FontSize="16"/>
                        </Button>
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="居中对齐" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8E3;" FontSize="16"/>
                        </Button>
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="右对齐" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8E2;" FontSize="16"/>
                        </Button>
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="两端对齐" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8E1;" FontSize="16"/>
                        </Button>

                        <Rectangle Width="1" Height="24" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="4,0"/>

                        <!-- 颜色和标记 -->
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="文字颜色" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE790;" FontSize="16"/>
                        </Button>
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="高亮" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7E6;" FontSize="16"/>
                        </Button>

                        <Rectangle Width="1" Height="24" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="4,0"/>

                        <!-- 上标下标 -->
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="上标" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7DE;" FontSize="14"/>
                        </Button>
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="下标" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7DF;" FontSize="14"/>
                        </Button>
                    </StackPanel>

                    <!-- 第二行工具 -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="4">

                        <!-- 列表格式 -->
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="无序列表" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8FD;" FontSize="16"/>
                        </Button>
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="有序列表" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8FE;" FontSize="16"/>
                        </Button>
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="任务列表" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8A5;" FontSize="16"/>
                        </Button>

                        <Rectangle Width="1" Height="24" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="4,0"/>

                        <!-- 缩进控制 -->
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="增加缩进" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8A0;" FontSize="16"/>
                        </Button>
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="减少缩进" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE89F;" FontSize="16"/>
                        </Button>

                        <Rectangle Width="1" Height="24" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="4,0"/>

                        <!-- 链接和媒体 -->
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="插入链接" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE71B;" FontSize="16"/>
                        </Button>
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="插入图片" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8B9;" FontSize="16"/>
                        </Button>
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="插入视频" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE714;" FontSize="16"/>
                        </Button>
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="插入表格" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8EC;" FontSize="16"/>
                        </Button>

                        <Rectangle Width="1" Height="24" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="4,0"/>

                        <!-- 特殊元素 -->
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="引用块" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8FD;" FontSize="16"/>
                        </Button>
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="分隔线" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE91C;" FontSize="16"/>
                        </Button>
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="代码块" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE943;" FontSize="16"/>
                        </Button>

                        <Rectangle Width="1" Height="24" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="4,0"/>

                        <!-- 清除格式 -->
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="清除格式" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE75C;" FontSize="16"/>
                        </Button>

                        <Rectangle Width="1" Height="24" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="4,0"/>

                        <!-- 撤销重做 -->
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="撤销" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7A7;" FontSize="16"/>
                        </Button>
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="重做" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7A6;" FontSize="16"/>
                        </Button>

                        <Rectangle Width="1" Height="24" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="4,0"/>

                        <!-- 视图控制 -->
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="全屏" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE740;" FontSize="16"/>
                        </Button>
                        <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                ToolTipService.ToolTip="设置" CornerRadius="4">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE713;" FontSize="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 编辑器容器 -->
            <ScrollView HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalScrollMode="Auto"
                        VerticalScrollMode="Disabled"
                        HorizontalScrollBarVisibility="Hidden"
                        VerticalScrollBarVisibility="Hidden"
                        ZoomMode="Disabled"
                        Margin="40,30,40,40">

                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        MinHeight="1000"
                        MinWidth="600"
                        MaxWidth="1200"
                        HorizontalAlignment="Stretch"
                        Padding="40">

                    <!-- 编辑器区域直接嵌入 WebView2，加载 TipTap 在线 Demo -->
                    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="6"
                        MinHeight="800">
                        <WebView2 x:Name="EditorWebView"
                          Source="http://localhost:5173/"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          MinHeight="800"
                          DefaultBackgroundColor="Transparent"/>
                    </Border>
                </Border>
            </ScrollView>

            <!-- 状态栏 -->
            <Border HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="20,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Spacing="20">
                        <TextBlock Text="字数: 0" 
                                   FontSize="12" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="行: 1 列: 1" 
                                   FontSize="12" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="已保存" 
                                   FontSize="12" 
                                   Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="Markdown" 
                                   FontSize="12" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="UTF-8" 
                                   FontSize="12" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 悬浮操作按钮 -->
            <Button Width="56" Height="56"
                    CornerRadius="28"
                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                    BorderThickness="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="40,40,40,80"
                    ToolTipService.ToolTip="快速插入">
                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE710;" FontSize="20" Foreground="White"/>
            </Button>
        </Grid>
    </Grid>
</Page>