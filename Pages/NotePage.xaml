<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App2.Pages.NotePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
      xmlns:ui="using:CommunityToolkit.WinUI"

    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部 Pivot 不改 -->
        <Pivot x:Name="TopPivot"
               Grid.Row="0"
               SelectionChanged="TopPivot_SelectionChanged"
               Title="Note"
               Background="{ThemeResource LayerFillColorDefaultBrush}">
            <PivotItem Header="文件">
                <Grid/>
            </PivotItem>
            <PivotItem Header="开始">
                <Grid/>
            </PivotItem>
            <PivotItem Header="插入">
                <Grid/>
            </PivotItem>
            <PivotItem Header="绘图">
                <Grid/>
            </PivotItem>
            <PivotItem Header="历史记录">
                <Grid/>
            </PivotItem>
            <PivotItem Header="审阅">
                <Grid/>
            </PivotItem>
        </Pivot>

        <!-- 主内容 -->
        <Grid Grid.Row="1">
            <!-- 悬浮工具栏：给常用按钮加 Click 事件 -->
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0.4"
                    CornerRadius="2"
                    Padding="20,10"
                    Margin="0,40,0,0"
                    
                    Canvas.ZIndex="200">

                <Border.Background>
                    <media:BackdropBlurBrush Amount="5.0" />
                </Border.Background>
                
                <StackPanel Orientation="Horizontal" Spacing="6">

                    <!-- 文件 -->
                    <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                            ToolTipService.ToolTip="新建" CornerRadius="2" Click="NewFile_Click">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE710;" FontSize="14"/>
                    </Button>
                    <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                            ToolTipService.ToolTip="打开(Markdown)" CornerRadius="2" Click="OpenMarkdown_Click">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8E5;" FontSize="14"/>
                    </Button>
                    <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                            ToolTipService.ToolTip="保存(Markdown)" CornerRadius="2" Click="SaveMarkdown_Click">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE74E;" FontSize="14"/>
                    </Button>
                    <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                            ToolTipService.ToolTip="打印" CornerRadius="2" Click="Print_Click">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE2F6;" FontSize="14"/>
                    </Button>

                    <Rectangle Width="1" Height="24" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="8,0"/>

                    <!-- 编辑 -->
                    <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                            ToolTipService.ToolTip="撤销" CornerRadius="2" Click="Undo_Click">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7A7;" FontSize="14"/>
                    </Button>
                    <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                            ToolTipService.ToolTip="重做" CornerRadius="2" Click="Redo_Click">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7A6;" FontSize="14"/>
                    </Button>

                    <Rectangle Width="1" Height="24" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="8,0"/>

                    <!-- 格式 -->
                    <ToggleButton x:Name="BtnBold" Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                  ToolTipService.ToolTip="粗体" CornerRadius="2" Click="Bold_Click">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8DD;" FontSize="14"/>
                    </ToggleButton>
                    <ToggleButton x:Name="BtnItalic" Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                  ToolTipService.ToolTip="斜体" CornerRadius="2" Click="Italic_Click">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8DB;" FontSize="14"/>
                    </ToggleButton>
                    <ToggleButton x:Name="BtnUnderline" Width="36" Height="36" Background="Transparent" BorderThickness="0"
                                  ToolTipService.ToolTip="下划线" CornerRadius="2" Click="Underline_Click">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8DC;" FontSize="14"/>
                    </ToggleButton>
                    <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                            ToolTipService.ToolTip="代码块" CornerRadius="2" Click="CodeBlock_Click">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE943;" FontSize="14"/>
                    </Button>
                    <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                            ToolTipService.ToolTip="引用" CornerRadius="2" Click="Blockquote_Click">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8FD;" FontSize="14"/>
                    </Button>
                    <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                            ToolTipService.ToolTip="无序列表" CornerRadius="2" Click="BulletList_Click">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8FD;" FontSize="14"/>
                    </Button>
                    <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                            ToolTipService.ToolTip="有序列表" CornerRadius="2" Click="OrderedList_Click">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8FD;" FontSize="14"/>
                    </Button>

                    <Rectangle Width="1" Height="24" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="8,0"/>

                    <!-- 插入 -->
                    <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                            ToolTipService.ToolTip="图片" CornerRadius="2" Click="InsertImage_Click">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8B9;" FontSize="14"/>
                    </Button>
                    <Button Width="36" Height="36" Background="Transparent" BorderThickness="0"
                            ToolTipService.ToolTip="链接" CornerRadius="2" Click="InsertLink_Click">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE71B;" FontSize="14"/>
                    </Button>

                </StackPanel>
            </Border>

            <!-- 纸面+A4感：仍然用你的 ScrollView 外观，内部换 WebView2 -->
            <ScrollView HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalScrollMode="Auto"
                        VerticalScrollMode="Auto"
                        ZoomMode="Disabled"
                        Margin="40,30,40,40">

                <Border x:Name="NoteContainer"
                        Background="White"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="2"
                        MinHeight="1000"
                        MinWidth="600"
                        HorizontalAlignment="Stretch"
                        Padding="0">
                    
                    <!-- 让内页样式由 HTML 控制 -->

                    <!-- 取代 RichEditBox -->
                    <WebView2 x:Name="EditorView"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"/>
                </Border>
            </ScrollView>

            <!-- 右下角悬浮：插入时间戳（示例） -->
            <Button x:Name="AddContentButton"
                    Width="56" Height="56"
                    CornerRadius="28"
                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                    BorderThickness="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="40"
                    ToolTipService.ToolTip="插入时间戳"
                    Click="AddContentButton_Click">
                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE710;" FontSize="20" Foreground="White"/>
            </Button>
        </Grid>
    </Grid>
</Page>
