<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App2.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App2.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- 自定义亚克力刷子 -->
        <AcrylicBrush x:Key="CustomAcrylicBrush"
                      TintColor="#66FFFFFF"
                      TintOpacity="0.8"
                      TintLuminosityOpacity="0.2"
                      FallbackColor="#F2F2F2"/>
    </Page.Resources>

    <Grid>
        <!-- 背景图片 -->
        <Image Source="https://picsum.photos/564/881" 
               Stretch="UniformToFill" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"/>

        <!-- 亚克力覆盖层 -->
        <Border Background="{StaticResource CustomAcrylicBrush}"
                CornerRadius="12"
                Margin="50"
                Padding="30">

            <StackPanel Spacing="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- 标题 -->
                <TextBlock Text="亚克力效果演示" 
                          FontSize="32" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Foreground="Black"/>

                <!-- 描述文字 -->
                <TextBlock Text="这是覆盖在图片上的亚克力模糊效果" 
                          FontSize="16"
                          HorizontalAlignment="Center"
                          TextAlignment="Center"
                          Foreground="#333333"
                          TextWrapping="Wrap"/>

                <!-- 按钮示例 -->
                <Button Content="测试按钮" 
                       HorizontalAlignment="Center"
                       Style="{ThemeResource AccentButtonStyle}"/>

                <!-- 更多内容区域 -->
                <Border Background="#33000000" 
                       CornerRadius="8" 
                       Padding="16">
                    <TextBlock Text="这是一个半透明的内容区域，展示层次效果" 
                              Foreground="White" 
                              TextAlignment="Center"
                              TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- 右上角的小演示区域 -->
        <Border Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="16"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="20">
            <TextBlock Text="系统主题亚克力" 
                      FontSize="14"
                      HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Page>